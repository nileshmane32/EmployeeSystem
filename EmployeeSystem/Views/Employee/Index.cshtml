
@{
    ViewBag.Title = "Employee";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<script src="~/JS/Employee.js"></script>


<div>
    <div class="form-group">
        <div class="row">
            <div class="col-md-12">
                <h4 class="box-title">
                    <strong><i class="fa fa-filter text-aqua"></i>&nbsp; Filters</strong>
                </h4>
            </div>
        </div>
    </div>
    <div class="form-group">
        <div class="row">
            <div class="col-md-3">
                <div class="form-group">
                    <label class="block">Employee Name </label>
                    <input type="text" class="form-control" id="txtSearchEmployeeName" maxlength="100">
                </div>
            </div>
            <div class="col-md-3">
                <div class="form-group">
                    <label class="block">Salary </label>
                    <input type="number" class="form-control" id="txtSearchSalary">
                </div>
            </div>
            <div class="col-md-3">
                <div class="form-group">
                    <label class="block">Age </label>
                    <input type="number" class="form-control" id="txtSearchAge">
                </div>
            </div>
            <div class="col-md-3">
                <div class="form-group">
                    <label class="block">Location </label>
                    <select class="form-control" id="ddSearchLocation">
                        <option value="">Select</option>
                        <option value="Ahmedabad">Ahmedabad</option>
                        <option value="Bangalore">Bangalore</option>
                        <option value="Delhi">Delhi</option>
                        <option value="Hyderabad">Hyderabad</option>
                        <option value="Indore">Indore</option>
                        <option value="Jaipur">Jaipur</option>
                        <option value="Mumbai">Mumbai</option>
                        <option value="Chennai">Chennai</option>
                        <option value="Pune">Pune</option>
                        <option value="Surat">Surat</option>
                    </select>
                </div>
            </div>
        </div>
    </div>
    <div class="form-group">
        <div class="row">
            <div class="col-md-6 pull-right text-right">
                <button type="button" id="btnSearchEmployee" class="btn btn-primary btn-flat">
                    <strong><i class="fa fa-search"></i>&nbsp; Search</strong>
                </button>
            </div>
        </div>
    </div>
</div>
<div>
    @*<button type="button" id="btnAddEmployee" class="btn btn-primary btn-flat">
        <strong><i class="fa fa-plus"></i>&nbsp; Add Employee</strong>
    </button>*@
    <div class="table-responsive">
        <table id="tblEmployeeDetails" class="table table-striped table-bordered table-hover display"></table>
    </div>
</div>


<div class="modal fade" id="mdlEmployee">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close btnCloseOkTrader" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
                <h4 class="modal-title" id="ModalTitle">Employee Details</h4>
            </div>
            <div class="modal-body">                
                <div class="row">
                    <div class="col-md-4">
                        <div class="form-group">
                            <label class="block">Name <span class="text-red">*</span></label>
                            <input type="text" class="form-control" id="txtName" maxlength="100">
                        </div>
                    </div>
                    <div class="col-md-4">
                        <div class="form-group">
                            <label class="block">Age <span class="text-red">*</span></label>
                            <input type="text" class="form-control" id="txtAge" maxlength="3">
                        </div>
                    </div>
                    <div class="col-md-4">
                        <div class="form-group">
                            <label class="block">Marital Status <span class="text-red">*</span></label>
                            <select class="form-control" id="ddMaritalStatus">
                                <option value="0">UnMaried</option>
                                <option value="1">Maried</option>
                            </select>
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-4">
                        <div class="form-group">
                            <label class="block">Salary <span class="text-red">*</span></label>
                            <input type="text" class="form-control" id="txtSalary" maxlength="10">
                        </div>
                    </div>
                    <div class="col-md-4">
                        <div class="form-group">
                            <label class="block">Location <span class="text-red">*</span></label>
                            <select class="form-control" id="ddLocation">
                                <option value="">Select</option>
                                <option value="Ahmedabad">Ahmedabad</option>
                                <option value="Bangalore">Bangalore</option>
                                <option value="Delhi">Delhi</option>
                                <option value="Hyderabad">Hyderabad</option>
                                <option value="Indore">Indore</option>
                                <option value="Jaipur">Jaipur</option>
                                <option value="Mumbai">Mumbai</option>
                                <option value="Chennai">Chennai</option>
                                <option value="Pune">Pune</option>
                                <option value="Surat">Surat</option>
                            </select>
                        </div>
                    </div>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" id="btnSave" class="btn btn-primary btn-flat">
                    <strong><i class="fa fa-save"></i>&nbsp; Save</strong>
                </button>
            </div>
        </div>
    </div>
</div>
