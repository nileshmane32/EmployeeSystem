<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title</title>

    @Styles.Render("~/Content/css")
    @*@Scripts.Render("~/bundles/modernizr")*@

    <link href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css" rel="stylesheet" />
    <link href="https://cdn.datatables.net/1.10.20/css/dataTables.bootstrap.min.css" rel="stylesheet" />
    <link href="~/Content/css/font-awesome.min.css" rel="stylesheet" />
    <script src="~/Scripts/jquery-3.3.1.min.js"></script>
    <script src="https://cdn.datatables.net/1.10.20/js/jquery.dataTables.min.js"></script>
    <script src="https://cdn.datatables.net/1.10.20/js/jquery.dataTables.min.js"></script>
</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("Employee Details", "Index", "Employee", new { area = "" }, new { @class = "navbar-brand" })
            </div>
            <div class="navbar-collapse collapse">
                @*<ul class="nav navbar-nav">
                    <li>@Html.ActionLink("Home", "Index", "Home")</li>
                    <li>@Html.ActionLink("About", "About", "Home")</li>
                    <li>@Html.ActionLink("Contact", "Contact", "Home")</li>
                </ul>*@
            </div>
        </div>
    </div>
    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year</p>
        </footer>

        <!--Alert-->
        <div id="AlertBox" class="modal fade slide-down with-shadow disable-scroll" tabindex="-1" role="dialog" aria-hidden="true" data-backdrop="static">
            <div class="modal-dialog modal-sm">
                <div class="modal-content-wrapper">
                    <div class="modal-content">
                        <div class="modal-header clearfix text-left">
                            <button type="button" id="AlertBoxClose" class="close" data-dismiss="modal" aria-hidden="true">
                                <i class="fa fa-times"></i>
                            </button>
                            <h5 class="m-t-0 bold" id="AlertTitle"></h5>
                        </div>
                        <div class="modal-body">
                            <p class="no-margin" id="AlertMessage"></p>
                        </div>
                        <div class="modal-footer text-right">
                            <button type="button" class="btn btn-primary btn-flat" data-dismiss="modal" id="AlertBoxOk">OK</button>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <!--End Alert-->
        <!--Confirm-->
        <div id="ConfirmBox" class="modal fade slide-down with-shadow disable-scroll" tabindex="-1" role="dialog" aria-hidden="true" data-backdrop="static">
            <div class="modal-dialog">
                <div class="modal-content-wrapper">
                    <div class="modal-content">
                        <div class="modal-header clearfix text-left">
                            <h5 class="m-t-0 bold" id="ConfirmTitle"></h5>
                        </div>
                        <div class="modal-body">
                            <p id="ConfirmMessage"></p>
                            <textarea id="ConfirmResponse" style="resize:none;" class="form-control"></textarea>
                        </div>
                        <div class="modal-footer text-right">
                            <button type="button" class="btn btn-default btn-flat" data-dismiss="modal" id="ConfirmBoxNo">No</button>
                            <button type="button" class="btn btn-primary btn-flat" data-dismiss="modal" id="ConfirmBoxYes">Yes</button>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <!--Confirm-->
    </div>

    @*@Scripts.Render("~/bundles/jquery")*@
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
